.row
	.span3
		.thumbnail= image_tag "ajo_cms/page_#{@page.layout}.png"
	.span4
		%h2= @page.name
		%h4= @page.title
		%h4
			Last updated:
			%br
			= @page.updated_at
%br
.row
	#actions.span12
		= render "layouts/page_admin_actions/#{@page.layout}"	
= render "layouts/page_admin_templates/#{@page.layout}"
.modal-backdrop
.modal
	.modal-header
		%h3
			= @post.title
			= link_to section_page_path(@section, @page) do
				%i.icon-remove
	.modal-body
		.row-fluid
			.span12
				.thumbnail= image_tag @post.image_url(:gallery).to_s
		%br
		.row-fluid
			.span12
				= @post.content
		%br
		.row-fluid
			.span4.pull-right
				= link_to edit_section_page_post_path(@section, @page, @post) do
					%span.btn.btn-mini.btn-primary Edit
				= link_to section_page_post_path(@section, @page, @post), method: :delete, :confirm => 'Are you sure' do
					%span.btn.btn-mini.btn-danger Delete