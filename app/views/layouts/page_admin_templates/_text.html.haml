- subsection.post_type('text').each do |post|
	%br
	.row-fluid
		.span12
			.row-fluid
				%h3
					= post.title
					.pull-right
						= link_to edit_section_page_subsection_post_path(@section, @page, subsection, post, :type => 'blogs') do
							%i.icon-edit
						= link_to section_page_subsection_post_path(@section, @page, subsection, post), method: :delete, :confirm => 'Are you sure?' do
							%i.icon-remove
				%br
				= post.content.html_safe
