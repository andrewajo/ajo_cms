.row-fluid
	.span12
		#myCarousel.carousel.slide
			.carousel-inner
				- @sliders.each_with_index do |post, index|
					.item{:class => index == 0 ? 'active' : ''}
						= image_tag post.image_url(:slider).to_s
						.carousel-caption
							%h4
								= post.title
							%p
								= post.content
								= link_to 'Edit', edit_section_page_post_path(@section, @page, post, :type => 'slider')
								= link_to 'Delete', section_page_post_path(@section, @page, post), method: :delete, :confirm => 'Are you sure?'
			%a.carousel-control.left{"data-slide" => "prev", :href => "#myCarousel"} &lsaquo;
			%a.carousel-control.right{"data-slide" => "next", :href => "#myCarousel"} &rsaquo;

- @headlines.each do |headline|
	.row-fluid
		.headline.span12
			%h3
				= headline.title
				= link_to 'Edit', edit_section_page_post_path(@section, @page, headline, :type => 'headline')
				= link_to 'Delete', section_page_post_path(@section, @page, headline), method: :delete, :confirm => 'Are you sure?'

			= headline.content