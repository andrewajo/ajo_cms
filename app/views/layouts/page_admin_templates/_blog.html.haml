- subsection.post_type('blogs').each do |post|
	%br
	.row-fluid
		.span12
			.row-fluid
				%h3
					= post.title
					= link_to 'Edit', edit_section_page_subsection_post_path(@section, @page, subsection, post, :type => 'blogs')
					= link_to 'Delete', section_page_subsection_post_path(@section, @page, subsection, post), method: :delete, :confirm => 'Are you sure?'

				%h4= post.date
				%br
			.row-fluid
				- if post.image_url(:thumb).nil?
					.span12
						= post.content.html_safe
				- else
					.span9
						= post.content.html_safe
						
					.span3
						.thumbnail
							= image_tag post.image_url(:thumb).to_s
	%br
