- subsection.posts.each do |post|
	%br
	.row-fluid
		.span1
			= link_to edit_section_page_subsection_post_path(@section, @page, subsection, post) do
				%span.btn.btn-mini.btn-primary Edit
			%br
			%br
			= link_to section_page_subsection_post_path(@section, @page, subsection, post), method: :delete, :confirm => 'Are you sure?' do
				%span.btn.btn-mini.btn-danger Delete
		.span11
			.row-fluid
				.span12
					.row-fluid
						.span12
							%h3= post.title
					.row-fluid
						-if !post.image_url(:large).nil?
							.span7
								.thumbnail
									= image_tag post.image_url(:large).to_s
							.span5
								= post.content.nil? ? post.content : post.content.html_safe
						- else
							.span12
								= post.content.nil? ? post.content : post.content.html_safe