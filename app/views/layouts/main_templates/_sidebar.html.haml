.container
	.row-fluid
		#header.span12
			= image_tag AjoCms::Company.first.logo_url.to_s
	.navbar
		.navbar-inner
			.container
				%ul.nav.span12
					- @sections.each do |section|
						%li.dropdown
							- if controller.action_name == 'index'
								= link_to section.name, "/#{section.name}", :class => 'dropdown-toggle', 'data-dropdown' => 'dropdown'
								-if section.pages.count > 1
									%ul.dropdown-menu
										-section.pages[1..-1].each do |page|
											%li= link_to page.name, "/#{section.name}/#{page.name}"
							- else
								= link_to section.name, "/#{section.name}", :class => section.pages.count > 0 ? 'dropdown-toggle' : '', 'data-dropdown' => 'dropdown'
								- if section.pages.count > 1
									%ul.dropdown-menu
										-section.pages[1..-1].each do |page|
											%li= link_to page.name, "/#{section.name}/#{page.name}"
	= render 'layouts/page_templates/' + @page_layout
	#footer.navbar.navbar-fixed-bottom
		.container
			.navbar-inner
				.row-fluid
					.span4
						= @company.name
					.span4
						= @company.contact
						%br
						= @company.email
