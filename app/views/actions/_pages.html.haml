- if controller.action_name == 'index'
	%li= link_to 'New Page', new_section_page_path(@section)
- elsif controller.action_name == 'show'
	%li.dropdown
		= link_to '', :class => 'dropdown-toggle', 'data-dropdown' => 'dropdown' do
			= @section.name
			%i.icon-chevron-down.icon-white
		%ul.dropdown-menu
			%li= link_to 'Edit', edit_section_path(@section)
			%li= link_to 'Delete'
			%li= link_to 'Move up'
			%li= link_to 'Move down'
	%li.dropdown
		= link_to '', :class => 'dropdown-toggle', 'data-dropdown' => 'dropdown' do
			= @page.name
			%i.icon-chevron-down.icon-white
		%ul.dropdown-menu
			%li= link_to 'Edit', edit_section_page_path(@section, @page)
			%li= link_to 'Delete', section_page_path(@section, @page), :method => :delete, :confirm => 'Are you sure?'
			%li= link_to 'Move up'
			%li= link_to 'Move down'
	%li= link_to 'New Subsection', new_section_page_subsection_path(@section.id, @page.id)