%table.table.header
	%thead
		%tr
			%th Section
			%th Title
			%th.links
	%tbody
		- @sections.each do |section|
			%tr
				%td= section.name
				%td= section.title
				%td.links
					= link_to section_path(section) do
						%i.icon-search
					= link_to edit_section_path(section) do
						%i.icon-edit
					= link_to section_path(section), method: :delete, :confirm => 'Are you sure?' do
						%i.icon-trash